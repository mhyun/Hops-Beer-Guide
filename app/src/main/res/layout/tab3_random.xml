<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.michaelhyun.hopsbeerguide.Tab3Random">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tab3_name_textview"
            android:layout_width="326dp"
            android:layout_height="36dp"
            android:layout_marginTop="16dp"
            android:text="@string/beer_name"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="22sp"
            android:layout_gravity="center" />
        <ImageView
            android:id="@+id/tab3_picture_imageview"
            android:layout_width="match_parent"
            android:layout_height="156dp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginBottom="36dp"
            android:contentDescription="@string/desc"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/tab3_description_textview"
            android:layout_width="match_parent"
            android:layout_height="142dp"
            android:layout_marginBottom="28dp"
            android:maxLines="70"
            android:scrollbars="vertical"
            android:text="@string/beer_desc"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="16sp" />
        <Button
            android:id="@+id/tab3_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:text="@string/next"
            android:layout_gravity="center"
            android:textColor="@android:color/white" />
    </LinearLayout>

</RelativeLayout>